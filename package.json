{
  "name": "augment-describe-pr",
  "version": "0.1.4",
  "description": "AI-powered code assistance for setting PR descriptions using Augment's intelligent development tools",
  "main": "action.yml",
  "type": "module",
  "scripts": {
    "test": "npm test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write --cache --ignore-unknown",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/augmentcode/describe-pr.git"
  },
  "keywords": [
    "github-action",
    "ai",
    "pull-request",
    "automation",
    "augment",
    "developer-tools",
    "ci-cd"
  ],
  "author": "Augment Code",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/augmentcode/describe-pr/issues"
  },
  "homepage": "https://github.com/augmentcode/describe-pr#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "action.yml",
    "README.md",
    "LICENSE",
    "templates/"
  ],
  "devDependencies": {
    "@types/node": "^24.7.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
